# Development Dockerfile for NestJS API
FROM node:18-alpine

# Set working directory
WORKDIR /app

# Install pnpm
RUN npm install -g pnpm

# Copy package files
COPY package*.json ./
COPY pnpm-lock.yaml ./

# Install dependencies
RUN pnpm install

# Expose port
EXPOSE 3000

# Start in development mode with hot reload
CMD ["pnpm", "run", "dev"]
